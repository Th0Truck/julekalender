- if current_user.admin?
  = simple_form_for @question do |f|
    - if @question.errors.any?
      #error_explanation
        %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
        %ul
          - @question.errors.full_messages.each do |msg|
            %li= msg
    .spacer.large
    .row
      = f.input :header, :label => 'Overskrift'
    .row
      = f.input :question, :label => 'Spørgsmål', :input_html => {:rows => 5}
    .row
      = f.button :submit, :value => 'Gem', :class => "btn btn-primary"
      = link_to 'Tilbage', root_path, :class => 'btn btn-danger'
- else
  = redirect_to root_url